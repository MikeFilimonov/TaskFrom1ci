SELECT
	RepsActivities.LineNumber AS LineNumber,
	RepsActivities.Activity AS Activity,
	RepsActivities.SalesRep AS SalesRep,
	LeadsTable.Lead AS Lead,
	ISNULL(LeadsTable.Potential, 0) AS Potential,
	ISNULL(LeadsTable.Type, &amp;StrFirstPeriod) AS Type,
	ISNULL(LeadsTable.Potential, 0) AS PotentialPresentation,
	LeadsTable.Lead AS LeadRef
FROM
	RepsActivities AS RepsActivities
		LEFT JOIN LeadsTable AS LeadsTable
		ON RepsActivities.Activity = LeadsTable.Activity
			AND RepsActivities.SalesRep = LeadsTable.SalesRep</query>
