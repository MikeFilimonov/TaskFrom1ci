		<dataSource>DataSource1</dataSource>
		<query>SELECT
	LeadActivitiesSliceLast.Lead AS Lead,
	LeadActivitiesSliceLast.SalesRep AS SalesRep,
	LeadActivitiesSliceLast.Activity AS Activity,
	Leads.Potential AS Potential,
	&amp;StrFirstPeriod AS Type
INTO LeadsTable
FROM
	InformationRegister.LeadActivities.SliceLast(ENDOFPERIOD(&amp;FirstPeriod, DAY), ) AS LeadActivitiesSliceLast
		LEFT JOIN Catalog.Leads AS Leads
		ON LeadActivitiesSliceLast.Lead = Leads.Ref
WHERE
	LeadActivitiesSliceLast.Campaign = &amp;Campaign
	AND NOT Leads.DeletionMark
	AND (Leads.ClosureResult = VALUE(Enum.LeadClosureResult.EmptyRef)
			OR Leads.ClosureDate &gt; ENDOFPERIOD(&amp;FirstPeriod, DAY))

UNION ALL

SELECT
	LeadActivitiesSliceLast.Lead,
	LeadActivitiesSliceLast.SalesRep,
	LeadActivitiesSliceLast.Activity,
	Leads.Potential,
	&amp;StrSecondPeriod
FROM
	InformationRegister.LeadActivities.SliceLast(ENDOFPERIOD(&amp;SecondPeriod, DAY), ) AS LeadActivitiesSliceLast
		LEFT JOIN Catalog.Leads AS Leads
		ON LeadActivitiesSliceLast.Lead = Leads.Ref
WHERE
	LeadActivitiesSliceLast.Campaign = &amp;Campaign
	AND NOT Leads.DeletionMark
	AND (Leads.ClosureResult = VALUE(Enum.LeadClosureResult.EmptyRef)
			OR Leads.ClosureDate &gt; ENDOFPERIOD(&amp;SecondPeriod, DAY))
;

