SELECT
	LeadsTable.SalesRep AS SalesRep
INTO SalesReps
FROM
	LeadsTable AS LeadsTable

GROUP BY
	LeadsTable.SalesRep
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	CampaignsActivities.LineNumber AS LineNumber,
	CampaignsActivities.Activity AS Activity,
	SalesReps.SalesRep AS SalesRep
INTO RepsActivities
FROM
	Catalog.Campaigns.Activities AS CampaignsActivities,
	SalesReps AS SalesReps
WHERE
	CampaignsActivities.Ref = &amp;Campaign
;

